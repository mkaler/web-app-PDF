<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>HomeServlet</servlet-name>
  	<display-name>HomeServlet</display-name>
  	<description></description>
  	<servlet-class>code.servlets.HomeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GotPDF</servlet-name>
  	<display-name>GotPDF</display-name>
  	<description></description>
  	<servlet-class>code.servlets.GotPDF</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>ErrorHandler</servlet-name>
  	<display-name>ErrorHandler</display-name>
  	<description></description>
  	<servlet-class>code.servlets.ErrorHandler</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HomeServlet</servlet-name>
  	<url-pattern>/HomeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>GotPDF</servlet-name>
  	<url-pattern>/GotPDF</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ErrorHandler</servlet-name>
  	<url-pattern>/ErrorHandler</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
        <welcome-file>HomeServlet</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/ErrorHandler</location>
  </error-page>
  <error-page>
	    <exception-type>java.lang.Throwable</exception-type >
	    <location>/ErrorHandler</location>
  </error-page>
</web-app>